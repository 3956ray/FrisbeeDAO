# FrisbeDAO Backend API 環境配置示例
# 複製此文件為 .env 並填入實際值

# 服務器配置
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# 數據庫配置
DATABASE_URL=postgresql://username:password@localhost:5432/frisbeedao
DB_HOST=localhost
DB_PORT=5432
DB_NAME=frisbeedao
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# Redis 配置
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 私钥配置 (不要提交真实私钥到代码库)
PRIVATE_KEY=your_private_key_here

# RPC 节点配置
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
OP_SEPOLIA_RPC_URL=https://sepolia.optimism.io
POLYGON_ZKEVM_TESTNET_RPC_URL=https://rpc.public.zkevm-test.net
CONTRACT_ADDRESS=0x...

# API 密钥配置 (用于合约验证)
ETHERSCAN_API_KEY=your_etherscan_api_key
BASESCAN_API_KEY=your_basescan_api_key
OPTIMISTIC_ETHERSCAN_API_KEY=your_optimistic_etherscan_api_key
POLYGON_ZKEVM_API_KEY=your_polygon_zkevm_api_key

# Gas 报告配置
REPORT_GAS=true

# 社交媒體 OAuth 配置
# Twitter OAuth 2.0
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=http://localhost:3001/api/social/twitter/callback

# Instagram Basic Display
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
INSTAGRAM_REDIRECT_URI=http://localhost:3001/api/social/instagram/callback

# TikTok for Developers
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=http://localhost:3001/api/social/tiktok/callback

# YouTube Data API v3
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:3001/api/social/youtube/callback

# 文件上傳配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# 速率限制配置
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# 安全配置
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=false

# 業務邏輯配置
PLATFORM_FEE_PERCENTAGE=2.5
MIN_TOKEN_SUPPLY=1000
MAX_TOKEN_SUPPLY=1000000
BASE_TOKEN_PRICE=0.001
BONDING_CURVE_K=0.0001
MAX_PRICE_IMPACT=10
VERIFICATION_REQUIRED_FOLLOWERS=1000

